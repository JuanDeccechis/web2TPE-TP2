<h2>{{titulo}}</h2>
 {{#if logueado}}
  <form action="" method="post">
    <input type="text" name="comentario" placeholder="Comentar aca" />
    <input type="submit">
    <p>No anda al 100% todavia</p>
  </form>
 {{/if}} 
<table class="table">
  <thead>
    <th>Comentario</th>
    <th>Usuario</th>
    <th>Puntaje</th>
    <th>ELIMINAR</th>
  </thead>
  <tbody>
  {{#each comentarios}}
    <tr class="">
      <td>{{textoComentario}} </td>
      <td> {{idUsuario}} </td>
      <td> {{puntaje}} </td>      
      <td> <a href="">ELIMINAR (NO ANDA!)</a> </td>
    </tr>
    {{/each}}
  </tbody>
</table>
